<h1>Bienvenidos</h1>
<p>Ingresa a nuestra pagina</p>

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="utf-8">

    <style>
        .padre {
        background: #B2D6F3;
        height: 200px;
        display: flex;
        justify-content: center;
        align-items: center;
        }

        .hijo {
        background: #B2D6F3;
        width: 250px;
        justify-content: center;

        }
    </style>
</head>

<div class="padre">

    <div class="hijo">

        <form asp-controller="Home" asp-action="Index" method="GET">

            <label for="username">Correo</label><br>
            <input type="text" name="username" placeholder="Escriba el correo"><br>

            <label for="password">Contraseña</label><br>
            <input type="password" name="password" placeholder="Escriba la contraseña"><br><br>


            <input type="submit" value="Iniciar sesión "><br>

        </form>
    </div>
</div>